<Page x:Class="JournalDemin.View.Pages.Activity"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JournalDemin.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Activity">

    <Grid>
        <DataGrid x:Name="DatGr" AutoGenerateColumns="False" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Width="800" Height="450">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Width="70" Binding="{Binding DateGr, StringFormat=dd/MM/yyyy}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
